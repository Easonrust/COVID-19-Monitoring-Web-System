<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.homework.web.taobao.dao.OrderDao">
    <resultMap id="orders" type="com.homework.web.taobao.entity.OrderEntity">
        <result column="orderid" property="orderid" />
        <result column="name" property="name" />
        <result column="date" property="date" />
        <result column="totalprice" property="totalprice" />
    </resultMap>
    <select id="getOrder" resultMap="orders" parameterType="java.lang.String">
        select  *
        from `order`
        where name = #{name}
    </select>
    <!-- 用户注册 -->
    <insert id="orderInsert" parameterType="com.homework.web.taobao.entity.OrderEntity" useGeneratedKeys="true" keyProperty="orderid">
        INSERT INTO `order`
        (
            orderid, name, date, totalprice
        )
        VALUES (
                   #{orderid},
                   #{name},
                   #{date},
                   #{totalprice}
               )
    </insert>

</mapper>