<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.homework.web.taobao.dao.GoodsDao">
    <resultMap id="goods" type="com.homework.web.taobao.entity.GoodsEntity">
        <result column="goodsid" property="goodsid" />
        <result column="goodsname" property="goodsname" />
        <result column="src" property="src" />
        <result column="desc" property="desc" />
        <result column="price" property="price" />
    </resultMap>
    <select id="getByOrderid" resultMap="goods" parameterType="java.lang.Integer">
        select  *
        from `goods`,`has_goods`
        where  goods.goodsid= has_goods.goodsid
    </select>


</mapper>